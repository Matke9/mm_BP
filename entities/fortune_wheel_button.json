{
  "format_version": "1.20.80",
  "minecraft:entity": {
    "description": {
      "identifier": "mm:fortune_button",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      //the default state of the button before pressing it
      "mm:unpressed": {
        "minecraft:variant": { "value": 0 }
      },
      "mm:pressed": {
        "minecraft:variant": { "value": 1 },
        "minecraft:timer": {
          //timer is used to make the button pressable again after the wheel stops spinning
          "time": 4,
          "looping": false,
          "time_down_event": {
            "event": "mm:go_up",
            "target": "self"
          }
        }
      }
    },
    "components": {
      "minecraft:collision_box": {
        "width": 0.2,
        "height": 0.2
      },
      "minecraft:knockback_resistance": {
        "value": 1
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": false
      },
      "minecraft:persistent": {},
      "minecraft:interact": {
        "interactions": [
          {
            "on_interact": {
              "filters": {
                "test": "is_variant",
                "operator": "!=",
                "value": 1
              },
              "event": "mm:press"
            }
          }
        ]
      }
    },
    "events": {
      "mm:press": {
        "remove": {
          "component_groups": ["mm:unpressed"]
        },
        "add": {
          "component_groups": ["mm:pressed"]
        },
        "queue_command": {
          "command": ["event entity @e[rm=0,r=1,type=mm:fortune_wheel] mm:spin"]
        }
      },
      //return to the default state
      "mm:go_up": {
        "remove": {
          "component_groups": ["mm:pressed"]
        },
        "add": {
          "component_groups": ["mm:unpressed"]
        }
      }
    }
  }
}
